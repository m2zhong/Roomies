<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorPrimary"
	android:orientation="vertical"
	tools:context="com.rip.roomies.activities.groups.CreateGroup">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal|top"
		android:layout_marginBottom="5dp"
		android:layout_marginTop="25dp"
		android:gravity="center_horizontal"
		android:text="Create Room"
		android:textColor="@color/colorAccent"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textSize="40sp" />

	<EditText
		android:id="@+id/group_name"
		android:hint="@string/group_name_hint"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginTop="10dp"
		android:background="@drawable/underline"
		android:inputType="text"
		android:paddingLeft="10dp"
		android:paddingBottom="5dp"
		android:textColorHint="@color/text"
		android:textSize="20sp"
		android:textColor="@color/colorAccent"
		/>

	<EditText
		android:id="@+id/group_description"
		android:hint="@string/group_desription_hint"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginTop="10dp"
		android:background="@drawable/underline"
		android:inputType="text"
		android:paddingLeft="10dp"
		android:paddingBottom="5dp"
		android:textColorHint="@color/text"
		android:textSize="20sp"
		android:textColor="@color/colorAccent"
		/>


	<TextView
		android:id="@+id/group_invitees"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:text="@string/invitees_header"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textColor="@color/colorAccent"
		android:textSize="14pt"
		android:layout_marginBottom="10dp"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<EditText
			android:id="@+id/invitee_add_field"
			android:hint="invitee username"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_marginBottom="10dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="10dp"
			android:layout_marginTop="10dp"
			android:background="@drawable/underline"
			android:inputType="text"
			android:paddingLeft="10dp"
			android:paddingBottom="5dp"
			android:textColorHint="@color/text"
			android:textSize="20sp"
			android:textColor="@color/colorAccent"
			/>

		<Button
			android:id="@+id/invitee_add_btn"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_gravity="center_horizontal"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:layout_marginTop="40dp"
			android:background="@drawable/circle"
			android:text="@string/plus"
			android:textSize="30dp"
			android:textColor="@color/colorPrimary" />

	</LinearLayout>

	<com.rip.roomies.views.UserContainer
		android:id="@+id/invitee_container"
		android:layout_width="match_parent"
		android:layout_height="150dp"
		android:isScrollContainer="true"
		android:orientation="vertical">
	</com.rip.roomies.views.UserContainer>

	<Button
		android:id="@+id/create_group_submit"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginTop="10dp"
		android:text="submit"
		android:textColor="@color/colorPrimary"
		android:textSize="24sp"
		android:background="@drawable/buttons"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		/>


</LinearLayout>
