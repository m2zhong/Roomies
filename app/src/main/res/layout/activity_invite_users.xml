<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.rip.roomies.activities.groups.InviteUsers"
	android:orientation="vertical"
	android:background="@color/colorPrimary"
	android:gravity="center">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<EditText
			android:id="@+id/add_user_field"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:hint="Username" />

		<Button
			android:id="@+id/add_user_btn"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:width="50dp"
			android:text="+"/>

	</LinearLayout>

	<com.rip.roomies.views.UserContainer
		android:id="@+id/invitees_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:isScrollContainer="true"
		android:layout_weight="1">

	</com.rip.roomies.views.UserContainer>

	<Button
		android:id="@+id/invite_users_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Invite Users" />

</LinearLayout>
